extends layouts/page.pug
block content 
    h1 Add song
    if message 
        .message.message__error #{message}
    form(method="POST")
        div.input
            label(for="title") Title
            input#title(type="text" name="title")
        div.input
            label(for="artist") Artist
            input#artist(type="text" name="artist")
        div.input
            label(for="thumb") Thumbnail
            input#thumb(type="text" name="thumb")
        div.input
            label(for="album") Album
            input#album(type="text" name="album")
        div.input
            label(for="year") Year release
            input#year(type="number" name="year" min=1900 max=(new Date).getFullYear() step=1 value=(new Date).getFullYear())

        button.btn Submit





