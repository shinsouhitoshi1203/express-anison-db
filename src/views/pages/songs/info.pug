extends ../../layouts/page.pug
block content 

    .song-info 
        .left 
            img.thumbnail(src=song.img alt=song.title)
            h1 #{song.title} 
            .meta
                .field 
                    p 
                        i.fa-solid.fa-microphone-lines 
                        span #{song.artist} 
                .field 
                    p.listen 
                        i.fa-brands.fa-youtube
                        a(href=song.yt alt=song.title) Listen this song 
                .addi 
                    .field 
                        p 
                            i.fa-solid.fa-calendar
                            span #{song.year}
                    .field 
                        p 
                            i.fa-solid.fa-record-vinyl
                            span #{song.album}  
        .right  
            h2 Lyrics
            .lyrics 
                each p in song.lyrics 
                    p #{p}