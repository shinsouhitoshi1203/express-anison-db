extends ../../../layouts/page.pug
block content 
    a(href="/admin/anison").btn.btn__blue
        i.fa-solid.fa-chevron-left 
        span Go back the list
    h1 Edit song - #{data.title}
    if message 
        .message.message__error #{message}
    form(method="POST" action="./?_method=PUT")
        div.input
            label(for="title") Title
            input#title(type="text" name="title" value=data.title)
        div.input
            label(for="artist") Artist
            input#artist(type="text" name="artist" value=data.artist)
        div.input
            label(for="thumb") Thumbnail
            input#thumb(type="text" name="thumb" value=data.thumb)
        div.input
            label(for="album") Album
            input#album(type="text" name="album" value=data.album)
        div.input
            label(for="year") Year release
            input#year(type="number" name="year" min=1900 max=(new Date).getFullYear() step=1 value=data.year)
        div.input
            label(for="lyric") Lyric
            textarea#lyric(name="lyric") #{data.lyric}

        button.btn Submit

